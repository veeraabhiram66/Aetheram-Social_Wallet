# BlockDAG Smart Wallet Environment Configuration Template
# Copy this to .env and configure your values

# ================================
# REQUIRED VARIABLES
# ================================

# BlockDAG Network RPC URL
BLOCKDAG_RPC_URL=https://rpc.primordial.bdagscan.com

# Private key for deploying contracts and paying gas fees
# WARNING: Never commit this to version control!
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Smart wallet factory contract address (set after deployment)
SMART_WALLET_FACTORY_ADDRESS=your_factory_address_here

# ================================
# OPTIONAL VARIABLES
# ================================

# Development settings
NODE_ENV=development
ALLOW_SSL_BYPASS=true

# Server configuration
PORT=4000

# Database settings
DB_PATH=./src/data/blockchain.db

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Backend server port (default: 4000)
PORT=4000

# Frontend URL for CORS (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# Environment mode (development/production)
NODE_ENV=development

# Smart wallet implementation contract address (optional)
SMART_WALLET_IMPLEMENTATION_ADDRESS=your_implementation_address_here

# ================================
# TEST/DEVELOPMENT VARIABLES
# ================================

# Test EOA address for local development
TEST_EOA_ADDRESS=0x484eab4066d5631754C329Cc27FA6213ba038cc8

